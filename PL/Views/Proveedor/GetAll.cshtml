@model ML.Proveedor
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Proveedor</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleciona un proveedor o presiona + para agregar uno nuevo</h5>
        <hr />
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("+", "Form", "Proveedor", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br>

    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <td>Editar</td>
                <td class="hidden">IdProveedor</td>
                <td>Nombre del proveedor</td>
                <td>Nombre</td>
                <td>Telefono</td>
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Proveedor proveedor in Model.Proveedores)
            {
                <tr>
                    <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form","Proveedor", new {IdProveedor = proveedor.IdProveedor})"></a></td>
                    <td class="hidden">@proveedor.IdProveedor</td>
                    <td>@proveedor.Nombre</td>
                    <td>@proveedor.Telefono</td>
                    <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete","Proveedor", new {IdProveedor = proveedor.IdProveedor})" onclick="return confirm('¿Seguro que deseas eliminar este proveedor?');"></a></td>
                </tr>
            }
        </tbody>
    </table>
