@model ML.Usuario

<section class="vh-100" style="background-color: #000000;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img id="Img" src="~/Images/LOGIN.jpg" style="width:auto ; height:500px" 
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresa a tu cuenta</h5>
                  @using (Html.BeginForm("Login","Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                  {
                    <div class="col">
                        <div class="form-outline mb-4">
                            <div class="col-md-6 col-12 col-sm-6">
                            @Html.LabelFor(model => model.Email)
                            @Html.TextBoxFor(model => model.Email, new {type="email", @class = "form-control form-control", placeholder="ejemplo@ejemplo.com", id = "txtEmail"})
                            @Html.ValidationMessageFor(model => model.Email)
                            <label id ="lblErrorEmail"></label>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="col-md-6 col-12 col-sm-6">
                        @Html.LabelFor(model => model.Password)
                        @Html.TextBoxFor(model => model.Password, new { type="password", @class = "form-control form-control" , id = "txtPassword" })
                        @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>

                  <div class="pt-1 mb-4">
                    <input type="submit" value="Inisiar sesion" class="btn btn-succes  btn-dark btn-lg btn-block" />
                  </div>

                  <a class="small text-muted" href="#!">Olvidaste tu contraseña?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">No tienes una cuenta? <a href="#!"
                      style="color: #393f81;">Regístrate aquí</a></p>
                  }

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>